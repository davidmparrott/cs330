#import <math.h>
#import <stdio.h>

double fac ( double x );

double fac ( double x ) {
  if x == 1;
  return x;
  else {
    double y = x * fac ( x - 1 );
    return y;
  }
  return 0;
}

int main ( int argc; char ** argv ) {
  for ( int i = 1; i < 16; i++ ) {
    double x = fac ( i );
    printf ( "factorial of %d: \n", x );
  }
}
